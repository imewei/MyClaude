{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Plugin Manifest",
  "description": "Schema for plugin.json manifest files",
  "type": "object",
  "required": ["name", "version", "type", "description", "author"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Plugin identifier in kebab-case"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9.]+)?$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "type": {
      "type": "string",
      "enum": ["command", "agent", "validator", "cache_provider", "reporter", "integration", "analyzer", "transformer"],
      "description": "Type of plugin"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief plugin description"
    },
    "author": {
      "type": "string",
      "description": "Plugin author name"
    },
    "framework_version": {
      "type": "string",
      "default": ">=2.0.0",
      "description": "Required framework version"
    },
    "python_version": {
      "type": "string",
      "default": ">=3.8",
      "description": "Required Python version"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Python package dependencies"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Plugin capabilities"
    },
    "supported_commands": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Commands this plugin supports/enhances"
    },
    "config_schema": {
      "type": "object",
      "description": "JSON schema for plugin configuration"
    },
    "default_config": {
      "type": "object",
      "description": "Default configuration values"
    },
    "permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["read", "write", "network", "execute", "admin"]
      },
      "description": "Required permissions"
    },
    "sandbox": {
      "type": "boolean",
      "default": true,
      "description": "Enable plugin sandboxing"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Plugin homepage URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source repository URL"
    },
    "license": {
      "type": "string",
      "description": "License identifier (SPDX)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Search tags"
    }
  }
}